#login_wrap(style="width:100%; height:100%; display:flex; justify-content: center; align-items: center;")
  #login_form
    form(method="post" action="/adm/login")
      label
        | ID:
        input#id.login_input(type="text" name="id")
      br
      label
        | PW:
        input#password.login_input(type="password" name="password")
      br
      label
        | DANCODE:
        input#dancode.login_input(type="text" name="dancode")
      br
      label
        | SERVICE:
        -if (Service) {
          select#service.login_input(name="service")
            -for (let i in Service) {
                option(value=Service[i].name)
                  =Service[i].name
            -}
        -} else {
          input#service.login_input(type="text" name="service")
        -}
      br
      label
        input(type="submit" value="로그인")
